#
# Makefile Common Part
#
CXXFLAGS += -fopenmp -D_TIMELOG -I. -I$(COMMON_CXX_SRCDIR) -I$(COMMON_C_SRCDIR)
CFLAGS += -fopenmp -D_TIMELOG -I. -I$(COMMON_C_SRCDIR)
FFLAGS += -fopenmp

#.cpp.o :
%.o : $(COMMON_CXX_SRCDIR)/%.cpp
	$(CXX) $(CXXFLAGS) -c $<

#.c.o :
%.o : $(COMMON_C_SRCDIR)/%.c
	$(CC) $(CFLAGS) -c $<

COMMON_CXX_OBJS = $(COMMON_CXX_SRC:.cpp=.o)
COMMON_C_OBJS = $(COMMON_C_SRC:.c=.o)
COMMON_OBJS = $(COMMON_CXX_OBJS) $(COMMON_C_OBJS)
